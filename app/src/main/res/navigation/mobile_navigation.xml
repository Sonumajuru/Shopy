<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mobile_navigation"
        app:startDestination="@id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.shopy.ui.home.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home"/>

    <fragment
            android:id="@+id/navigation_search"
            android:name="com.example.shopy.ui.search.SearchFragment"
            android:label="@string/title_search"
            tools:layout="@layout/fragment_search"/>

    <fragment
            android:id="@+id/navigation_cart"
            android:name="com.example.shopy.ui.cart.CartFragment"
            android:label="@string/title_shopping_cart"
            tools:layout="@layout/fragment_cart"/>

    <fragment
            android:id="@+id/navigation_favorite"
            android:name="com.example.shopy.ui.favorite.FavoriteFragment"
            android:label="@string/title_favorite"
            tools:layout="@layout/fragment_favorite"/>

    <fragment
            android:id="@+id/navigation_account"
            android:name="com.example.shopy.ui.account.AccountFragment"
            android:label="@string/title_account"
            tools:layout="@layout/fragment_account"/>

    <fragment
            android:id="@+id/navigation_order"
            android:name="com.example.shopy.ui.order.OrderFragment"
            android:label="@string/title_order"
            tools:layout="@layout/fragment_order"/>

    <fragment
            android:id="@+id/navigation_register"
            android:name="com.example.shopy.ui.register.RegisterFragment"
            android:label="@string/title_create_user"
            tools:layout="@layout/fragment_register"/>

    <fragment
            android:id="@+id/navigation_category"
            android:name="com.example.shopy.ui.category.CategoryFragment"
            android:label="@string/title_category"
            tools:layout="@layout/fragment_category"/>

    <fragment
            android:id="@+id/navigation_login"
            android:name="com.example.shopy.ui.login.LoginFragment"
            android:label="@string/title_login"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_navigation_login_to_navigation_account"
                app:destination="@id/navigation_account"
                app:popUpTo="@id/navigation_login"
                app:launchSingleTop="true"/>
    </fragment>

    <fragment
            android:id="@+id/navigation_product"
            android:name="com.example.shopy.ui.product.ProductFragment"
            android:label="@string/title_manage_product"
            tools:layout="@layout/fragment_product"/>

    <fragment
            android:id="@+id/navigation_overview"
            android:name="com.example.shopy.ui.overview.OverviewFragment"
            android:label="@string/title_product_listing"
            tools:layout="@layout/fragment_overview"/>

    <fragment
            android:id="@+id/navigation_detail"
            android:name="com.example.shopy.ui.detail.DetailFragment"
            android:label="@string/title_product_detail"
            tools:layout="@layout/fragment_detail"/>

    <fragment
            android:id="@+id/navigation_profile"
            android:name="com.example.shopy.ui.profile.ProfileFragment"
            android:label="@string/title_profile"
            tools:layout="@layout/fragment_profile"/>

    <fragment
            android:id="@+id/navigation_bank"
            android:name="com.example.shopy.ui.bank.BankFragment"
            android:label="@string/title_bank"
            tools:layout="@layout/fragment_bank"/>

    <fragment
            android:id="@+id/navigation_image"
            android:name="com.example.shopy.ui.image.ImageFragment"
            android:label="@string/title_image"
            tools:layout="@layout/fragment_image"/>

    <fragment
            android:id="@+id/navigation_reset"
            android:name="com.example.shopy.ui.reset.ResetFragment"
            android:label="title_reset"
            tools:layout="@layout/fragment_reset"/>

</navigation>