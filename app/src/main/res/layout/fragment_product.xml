<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.product.ProductFragment"
        android:id="@+id/relativeLayout4">

    <ImageView
            android:id="@+id/imgView_product"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/product_image"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnChoose"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />

    <ImageView
            android:id="@+id/btnChoose"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_normal_background"
            android:src="@drawable/ic_choose_file_black_24"
            app:layout_constraintEnd_toStartOf="@+id/btnUpload"
            app:layout_constraintTop_toTopOf="@+id/btnUpload"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnUpload"
            android:layout_marginEnd="10dp"
            />

    <ImageView
            android:id="@+id/btnUpload"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_normal_background"
            android:src="@drawable/ic_file_upload_black_24"
            app:layout_constraintStart_toEndOf="@+id/btnChoose"
            app:layout_constraintEnd_toStartOf="@+id/btnView"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/category"
            android:layout_marginEnd="9dp"
            />

    <ImageView
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_normal_background"
            android:src="@drawable/ic_folder_open_black_24"
            app:layout_constraintStart_toEndOf="@+id/btnUpload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnUpload"
            app:layout_constraintBottom_toBottomOf="@+id/btnUpload"
            android:layout_marginEnd="10dp"
            />

    <Spinner
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/country"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginBottom="78dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_Price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/category"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/category"
            android:layout_marginEnd="124dp"
            />

    <EditText
            android:id="@+id/txt_Name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/title"
            android:maxLength="15"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/grey"
            android:textSize="15sp"
            android:autofillHints="Category"
            android:layout_marginTop="63dp"
            android:layout_marginBottom="63dp"
            app:layout_constraintTop_toTopOf="@+id/category"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Price"
            android:minHeight="48dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/category"
            app:layout_constraintEnd_toEndOf="@+id/txt_Price"/>

    <EditText
            android:id="@+id/txt_Price"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/price"
            android:maxLength="6"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/grey"
            android:inputType="number"
            android:digits="0123456789"
            android:textSize="15sp"
            android:autofillHints="Price"
            app:layout_constraintEnd_toStartOf="@+id/txt_Currency"
            android:layout_marginBottom="177dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="5dp"
            />

    <TextView
            android:id="@+id/txt_Currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="$$$"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:enabled="false"
            android:background="@color/grey"
            android:textSize="15sp"
            android:autofillHints="Currency"
            app:layout_constraintStart_toEndOf="@+id/txt_Price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Price"
            android:layout_marginEnd="236dp"
            />

    <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:isIndicator="false"
            android:backgroundTint="@color/black"
            android:progressTint="@color/royal_orange"
            android:numStars="5"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_Price"/>

    <TextView
            android:id="@+id/txt_Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Rating"
            android:textSize="15sp"
            android:autofillHints="Currency"
            app:layout_constraintTop_toTopOf="@+id/ratingBar"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/ratingBar"/>

    <EditText
            android:id="@+id/txt_Description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textImeMultiLine|textMultiLine"
            android:hint="@string/description"
            android:gravity="top|start"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/grey"
            android:textSize="15sp"
            android:autofillHints="Description"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>