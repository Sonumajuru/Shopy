<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.product.ProductFragment"
        android:id="@+id/relativeLayout4">

    <ImageView
            android:id="@+id/imgView_product"
            android:layout_width="371dp"
            android:layout_height="259dp"
            android:contentDescription="@string/product_image"
            android:layout_marginTop="20dp"
            numberpicker:layout_constraintEnd_toEndOf="parent"
            numberpicker:layout_constraintTop_toTopOf="parent"
            numberpicker:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"/>

    <ImageView
            android:id="@+id/btnChoose"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:background="@drawable/btn_normal_background"
            android:src="@drawable/ic_choose_file_black_24"
            android:layout_marginStart="10dp"
            numberpicker:layout_constraintEnd_toStartOf="@+id/btnView"
            numberpicker:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="132dp"
            tools:layout_editor_absoluteY="299dp"/>

    <ImageView
            android:id="@+id/btnUpload"
            android:layout_width="117dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_normal_background"
            android:src="@drawable/ic_file_upload_black_24"
            numberpicker:layout_constraintEnd_toStartOf="@+id/btnView"
            numberpicker:layout_constraintTop_toBottomOf="@+id/imgView_product"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"/>

    <ImageView
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:background="@drawable/btn_normal_background"
            android:src="@drawable/ic_folder_open_black_24"
            numberpicker:layout_constraintBottom_toTopOf="@+id/textView3"
            numberpicker:layout_constraintTop_toBottomOf="@+id/imgView_product"
            numberpicker:layout_constraintStart_toEndOf="@+id/btnChoose"
            android:layout_marginEnd="10dp"
            numberpicker:layout_constraintEnd_toEndOf="parent"/>

    <Spinner
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/country"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            numberpicker:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginBottom="103dp"
            numberpicker:layout_constraintBottom_toTopOf="@+id/txt_Currency"
            numberpicker:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            numberpicker:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="353dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:id="@+id/textView3"
            numberpicker:layout_constraintTop_toBottomOf="@+id/btnUpload"
            numberpicker:layout_constraintStart_toEndOf="@+id/category"
            numberpicker:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="29dp"
            numberpicker:layout_constraintBottom_toTopOf="@+id/txt_Name"
            android:layout_marginEnd="124dp"/>

    <EditText
            android:id="@+id/txt_Name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/name"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/grey"
            android:textSize="15sp"
            android:autofillHints="Category"
            numberpicker:layout_constraintTop_toBottomOf="@+id/textView3"
            numberpicker:layout_constraintBottom_toTopOf="@+id/txt_Price"
            numberpicker:layout_constraintStart_toStartOf="@+id/category"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            numberpicker:layout_constraintEnd_toEndOf="@+id/txt_Currency"/>

    <EditText
            android:id="@+id/txt_Price"
            android:layout_width="123dp"
            android:layout_height="48dp"
            android:hint="@string/price"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/grey"
            android:textSize="15sp"
            android:autofillHints="Price"
            numberpicker:layout_constraintTop_toBottomOf="@+id/txt_Name"
            numberpicker:layout_constraintEnd_toStartOf="@+id/txt_Currency"
            android:layout_marginBottom="10dp"
            numberpicker:layout_constraintBottom_toTopOf="@+id/rating_Layout"
            numberpicker:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>

    <TextView
            android:id="@+id/txt_Currency"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:hint="$$$"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/grey"
            android:textSize="15sp"
            android:autofillHints="Currency"
            numberpicker:layout_constraintStart_toEndOf="@+id/txt_Price"
            tools:layout_editor_absoluteY="502dp"/>

    <RelativeLayout
            android:id="@+id/rating_Layout"
            android:layout_width="177dp"
            android:layout_height="36dp"
            numberpicker:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            numberpicker:layout_constraintTop_toBottomOf="@+id/txt_Price"
            android:layout_marginBottom="10dp"
            numberpicker:layout_constraintBottom_toTopOf="@+id/txt_Description">

        <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/ratingBarStyleIndicator"
                android:isIndicator="false"
                android:backgroundTint="@color/black"
                android:progressTint="@color/royal_orange"
                android:numStars="5"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"/>

        <TextView
                android:id="@+id/txt_Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/ratingBar"
                android:text="Set Rating"
                android:textSize="15sp"
                android:autofillHints="Currency"/>

    </RelativeLayout>

    <EditText
            android:id="@+id/txt_Description"
            android:layout_width="374dp"
            android:layout_height="94dp"
            android:inputType="textImeMultiLine|textMultiLine"
            android:hint="@string/description"
            android:gravity="top|start"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/grey"
            android:textSize="15sp"
            android:autofillHints="Description"
            numberpicker:layout_constraintTop_toBottomOf="@+id/rating_Layout"
            numberpicker:layout_constraintStart_toStartOf="parent"
            numberpicker:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>