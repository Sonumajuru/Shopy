<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.favorite.FavoriteFragment">

    <RelativeLayout
            android:id="@+id/create_List_Layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingBottom="10dp">

        <ImageView
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_list_add_24"
                android:scaleType="fitCenter"
                android:contentDescription="@string/manage_product"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/text_favorite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/create_List_Layout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ScrollView
            android:id="@+id/item_list_ScrollView_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C8E7F2"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/text_favorite"
            android:fillViewport="true"
            tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
                android:id="@+id/item_list_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>