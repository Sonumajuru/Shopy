<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
            android:id="@+id/search_Layout"
            android:layout_below="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp">

        <SearchView
                android:id="@+id/searchView"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_background"
                android:elevation="2sp"
                tools:ignore="UnusedAttribute">
            <requestFocus />

        </SearchView>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/advertisement_Layout"
            android:orientation="vertical"
            android:layout_below="@+id/search_Layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="#C8E7F2">

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/middle_Layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/advertisement_Layout">

        <Button
                android:id="@+id/order_Btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/order"
                android:layout_marginStart="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"/>

        <Button
                android:id="@+id/category_Btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
            android:id="@+id/deals_ScrollView_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/middle_Layout"
            android:fillViewport="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="#C8E7F2"
            tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
                android:id="@+id/items_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>