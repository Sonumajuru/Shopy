<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.cart.ShoppingCartFragment">

    <TextView
            android:id="@+id/text_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
            android:id="@+id/to_Pay_Layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/text_shopping_cart"
            android:background="#C8E7F2">

        <ScrollView
                android:id="@+id/to_Pay_ScrollView_Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <RelativeLayout
                    android:id="@+id/to_Pay_items_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/middle_Layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/to_Pay_Layout">

        <Button
                android:id="@+id/category_Btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/pay"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_background_blue"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/overview_price_Layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_below="@+id/middle_Layout"
            android:layout_above="@+id/accepted_method_Layout"
            android:background="#7F2">


    </LinearLayout>

    <LinearLayout
            android:id="@+id/accepted_method_Layout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:background="#C8E7F2"
            android:layout_alignParentBottom="true">

    </LinearLayout>

</RelativeLayout>